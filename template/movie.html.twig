{% extends 'main.html.twig' %}

{% block title %}
    {{ movie.title }}
{% endblock %}

{% block content %}
    <div class="container">
        <div class="mt-5">
            <a href="/">Back to list</a>
        </div>
        <h1 class="mb-4">{{ movie.title }}</h1>
        <img src="{{ movie.image }}" alt="{{ movie.title }}" class="mb-4">
        <div class="mb-4">{{ movie.description }}</div>
        <a href="{{ movie.link }}">Source</a>
    </div>
{% endblock %}