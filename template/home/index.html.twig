{% extends 'main.html.twig' %}

{% block title %}
    {{ trailers | length }} iTunes Movie trailers
{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>
                        <div class="mb-4">
                            <a href="movie/{{ trailer.id }}" style="text-decoration: none;">
                                <img src="{{ trailer.image }}" alt="{{ trailer.title }}">
                            </a>
                        </div>
                        <a href="movie/{{ trailer.id }}">{{ trailer.title }}</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
